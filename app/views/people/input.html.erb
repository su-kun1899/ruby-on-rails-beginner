<h1>People#input</h1>
<p><%= @msg %></p>
<% if @person.errors.any? %>
    <ul>
      <% @person.errors.full_messages.each do |error| %>
          <li><%= error %></li>
      <% end %>
    </ul>
<% end %>
<pre>
  <table>
    <%= form_for(@person, url: {contoller: 'people', action: 'create'}) do |form| %>
    <tr>
      <th>Name</th>
      <td><%= form.text_field :name %></td>
    </tr>
    <tr>
      <th>Age</th>
      <td><%= form.text_field :age %></td>
    </tr>
    <tr>
      <th>Mail</th>
      <td><%= form.text_field :mail %></td>
    </tr>
    <tr>
      <th></th>
      <td><%= form.submit '送信' %></td>
    </tr>
    <% end %>
  </table>
</pre>